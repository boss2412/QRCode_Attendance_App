<TeacherScanner>:
    MDFloatLayout:
        size: root.size
        pos: root.pos

        MDTextField:
            hint_text: "Lecture Name"
            id: lecture_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: 0.8, 0.1

        MDTextField:
            hint_text: "Date (DD/MM/YYYY)"
            id: date_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint: 0.8, 0.1

        MDTextField:
            hint_text: "Time (eg: 14:00)"
            id: time_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.8, 0.1

        MDRaisedButton:
            text: "Scan"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: 0.5, 0.05
            md_bg_color: rgba(159, 90, 253, 255)
            on_release:
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
