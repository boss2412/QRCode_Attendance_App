<TeacherScanner>:
    MDFloatLayout:
        size: root.size
        pos: root.pos

        MDRaisedButton:
            text: "Scan"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: 0.5, 0.2
            md_bg_color: rgba(159, 90, 253, 255)
            on_release: app.scan_qr_code()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDRaisedButton:
            text: "Convert to Excel"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.5, 0.2
            md_bg_color: rgba(159, 90, 253, 255)
            on_release: app.xlsx()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
