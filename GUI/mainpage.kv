        name: 'first'
        MainBoxLayout:
            orientation: "vertical"
            backgroundcolor: 0,0,0,0
            Button:
                #size_hint:0.625,0.625
                #pos_hint: {"x": 0.2}
                background_normal: 'student1.png'
                background_down: 'student2.png'
                on_release: root.current = 'second'
            Button:
                #size_hint:0.625,0.625
                #pos_hint: {"x": 0.2}
                background_normal: 'teacher1.png'
                background_down: 'teacher2.png'
                on_release: root.current = 'third'

    SecondScreen:
        name: 'second'
    ThirdScreen:
        name: 'third'