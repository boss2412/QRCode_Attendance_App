<StudentLogin>:
    MDFloatLayout:
        size: root.size
        pos: root.pos

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y': 0.95}
            user_font_size: "30sp"

            text_color: rgba(26, 24, 58, 255)
            on_release:root.manager.current = 'welcome'

        MDLabel:
            text: "Login to Continue"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {'center_x': 0.675, 'center_y': 0.8}
            color: rgba(0, 0, 59, 255)

        MDTextField:
            hint_text: "Email"
            id: email_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint: 0.8, 0.1

        MDTextField:
            hint_text: "Password"
            password: True
            id: password_input
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.8, 0.1

        MDRaisedButton:
            text: "Login"
            font_name: "BPoppins"
            font_size: "23sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint: 0.5, 0.05
            md_bg_color: rgba(159, 90, 253, 255)
            on_release: app.login_user(email_input.text, password_input.text)
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDFlatButton:
            text: "Don't have an account?  Register"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint: 0.5, 0.05
            on_release: root.manager.current = 'student_register'
